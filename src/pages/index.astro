---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
// ...otros imports si los tienes
---
<Layout pageTitle="Inicio">
  <!-- ================================================== -->
  <!-- ===== COMIENZA NUESTRA SECCIÓN HERO ============ -->
  <!-- ================================================== -->
  <section class="relative bg-slate-200 dark:bg-slate-800 h-[60vh] min-h-[400px] flex items-center justify-center text-center section-fade-in">
    
    <!-- Capa de superposición oscura (opcional pero muy recomendado) -->
    <div class="absolute inset-0 bg-black/50"></div>

    <!-- Contenedor del contenido (centrado y con ancho máximo) -->
    <div class="relative z-10 max-w-4xl mx-auto px-4">
      <h1 class="text-4xl md:text-6xl font-extrabold text-white tracking-tight">
        Construyendo Experiencias Digitales Modernas
      </h1>
      <p class="mt-4 text-lg md:text-xl text-slate-200 max-w-2xl mx-auto">
        De la idea al código. Transformo problemas complejos en software intuitivo, rápido y escalable.
      </p>
      
      <!-- Contenedor de botones -->
      <div class="mt-8 flex justify-center gap-4">
        <a href="/proyectos" class="bg-sky-500 hover:bg-sky-600 text-white font-bold py-3 px-6 rounded-lg transition-transform hover:scale-105">
          Ver mis proyectos
        </a>
        <a href="/contacto" class="bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white font-bold py-3 px-6 rounded-lg transition-colors">
          Contactar
        </a>
      </div>
    </div>
    
  </section>
  <!-- ================================================== -->
  <!-- ====== FIN DE NUESTRA SECCIÓN HERO ============= -->
  <!-- ================================================== -->

  <!-- Aquí podría empezar el resto de tu contenido -->
  <section class="py-16">
    <h2 class="text-3xl font-bold text-center">Contenido debajo del Hero</h2>
  </section>

  <Fragment slot="after-footer-scripts">
    <script>
      import '../scripts/scroll-animations.js';
    </script>
  </Fragment>
</Layout>