---
const { name, cuisine, priceRange, image, imageAlt, rating } = Astro.props;
console.log('En RestaurantHero, esto es la prop "image":', image);
import { Image } from "astro:assets";
---

<section class="relative h-[60vh] md:h-[70vh] section-fade-in">

    <Image
        src={image}
        alt={imageAlt}
        class="absolute inset-0 w-full h-full object-cover"
        width={1600}
        height={900}
        format="webp"
        loading="eager"
        decoding="async" 
    />

    <div class="absolute inset-0 bg-black/60"></div>

    <div class="relative z-10 h-full flex flex-col items-center justify-center text-center text-white p-4">

        <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight">
            {name}
        </h1>

        <div class="mt-6 flex flex-wrap justify-center gap-2">

            {
                cuisine.map((cuisineKind) => (
                    <span class="bg-white/20 backdrop-blur-sm text-white text-sm font-medium px-3 py-1 rounded-full">
                        {cuisineKind}
                    </span>
                ))
            }
            <span class="bg-white/20 backdrop-blur-sm text-white text-sm font-medium px-3 py-1 rounded-full flex items-center gap-1">

                <span>‚≠ê</span>
                <span>{rating} / 5</span>

            </span>
            
            <span

                class="bg-white/20 backdrop-blur-sm text-white text-sm font-medium px-3 py-1 rounded-full"
                >{priceRange}
            
            </span>
        </div>
    </div>
</section>
