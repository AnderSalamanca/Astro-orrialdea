---
const { title, servings, image, imageAlt, description, slug, cookingTime, difficulty } = Astro.props;
import Image from "astro/components/Image.astro";
const difficultyColors = {
  Fácil: ' text-green-800 dark:text-green-200',
  Medio: ' text-yellow-800 dark:text-yellow-200',
  Difícil: 'text-red-800 dark:text-red-200',
};
const difficultyClass = difficultyColors[difficulty] || 'bg-slate-100 text-slate-800';
---

<section class="relative h-[60vh] md:h-[70vh]">

    <Image
        src={image}
        alt={imageAlt}
        class="absolute inset-0 w-full h-full object-cover"
        width={1600}
        height={900}
        format="webp"
        loading="eager"
        decoding="async" 
    />

    <div class="absolute inset-0 bg-black/60"></div>

    <div class="relative z-10 h-full flex flex-col items-center justify-center text-center text-white p-4">

        <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight">
            {title}
        </h1>

        <div class="mt-6 flex flex-wrap justify-center gap-2">

            {
                    <span class="bg-white/20 backdrop-blur-sm text-white text-sm font-medium px-3 py-2 rounded-full">
                         Servings: {servings}
                    </span>
            }
            <span class="bg-white/20 backdrop-blur-sm text-white text-sm font-medium px-3 py-1 rounded-full flex items-center gap-1">

                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <span class="font-medium">{cookingTime}</span>

            </span>
            
            <span class={`bg-white/20 backdrop-blur-sm text-sm font-bold px-3 py-1.5 rounded-full ${difficultyClass}`}>
                {difficulty}
            </span>
        </div>
    </div>
</section>
