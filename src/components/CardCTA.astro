---
import { Image } from 'astro:assets';
const { href, title, description, imageSrc, imageAlt, buttonText } = Astro.props;
---

<a 
  href={href} 
  class="relative block rounded-xl overflow-hidden shadow-lg group h-80 text-white text-center flex flex-col justify-end p-6"
>
  <!-- Capa 1: Imagen de Fondo -->
  <Image 
    src={imageSrc} 
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    width={800}
    height={600}
  />

  <!-- Capa 2: Filtro Oscuro (un gradiente para mÃ¡s elegancia) -->
  <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>

  <!-- Capa 3: Contenido de Texto -->
  <div class="relative z-10">
    <h3 class="text-3xl font-extrabold">{title}</h3>
    <p class="mt-2 mb-4 opacity-90">{description}</p>
    <span class="inline-block bg-primary text-white font-bold py-2 px-5 rounded-lg transition-transform group-hover:scale-105">
      {buttonText}
    </span>
  </div>
</a>