---
// src/components/Header.astro
import Logo from './Logo.astro'; // Un componente para nuestro logo
import ThemeToggle from './ThemeToggle.jsx';
import MobileMenu from './MobileMenu.jsx';  
// Importaremos el menú móvil aquí más tarde

// Nuestros links de nuestras paginas
const navLinks = [
  { href: "/", text: "Inicio" },
  { href: "/proyectos", text: "Proyectos" },
  { href: "/blog", text: "Blog" },
  { href: "/sobre-mi", text: "Sobre Mí" },
];
---
<header class="bg-white/95 dark:bg-slate-900/95 backdrop-blur-sm sticky top-0 z-50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Sección Izquierda: Logo -->
      <div class="flex-shrink-0">
        <Logo />
      </div>

      <!-- Sección Central: Navegación de Escritorio -->
      <nav class="hidden md:flex md:items-center md:space-x-8">
        {navLinks.map(link => (
          <a href={link.href} class="font-medium text-slate-600 dark:text-slate-300 hover:text-sky-500 dark:hover:text-sky-400">
            {link.text}
          </a>
        ))}
      </nav>

      <!-- Sección Derecha: Iconos y Botón Móvil -->
      <div class="flex items-center gap-4">
       <ThemeToggle client:load />

        <!-- Botón del menú hamburguesa (solo visible en móvil) -->
        <div class="md:hidden">
            <!-- 2. Añade la isla, pásale los enlaces y ponle una directiva client -->
            <MobileMenu navLinks={navLinks} client:load />
          </div>
      </div>

    </div>
  </div>
</header>